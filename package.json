{
  "name": "metamcp",
  "private": true,
  "scripts": {
    "start:build": "pnpm turbo run build && pnpm turbo run start",
    "start:nobuild": "pnpm turbo run start",
    "start:smart": "node scripts/smart-build.js",
    "start:production": "cross-env NODE_ENV=production node scripts/smart-build.js --prod",
    "start:dev": "cross-env NODE_ENV=development node scripts/smart-build.js --dev",
    "start": "pnpm run start:smart",
    "build": "turbo run build",
    "dev": "dotenv -e .env.local turbo run dev",
    "smart-build": "node scripts/smart-build.js",
    "smart-build:dev": "node scripts/smart-build.js --dev",
    "smart-build:prod": "node scripts/smart-build.js --prod",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "local-start": "pm2 list | grep -q 'metamcp-dev.*online' && echo 'âœ… metamcp-dev is already running' || pm2 start ecosystem.config.js",
    "local-stop": "pm2 stop metamcp-dev",
    "local-restart": "pm2 restart metamcp-dev",
    "local-status": "pm2 status",
    "local-logs": "pm2 logs metamcp-dev",
    "local-delete": "pm2 delete metamcp-dev",
    "clean:cache": "rm -rf .turbo && pnpm store prune",
    "clean:builds": "rm -rf apps/frontend/.next apps/backend/dist packages/*/dist",
    "clean:deps": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:logs": "rm -rf logs/*.log metamcp.log pm2.log",
    "clean:all": "pnpm clean:cache && pnpm clean:builds && pnpm clean:deps && pnpm clean:logs && echo 'ðŸ§¹ Complete cleanup finished!'",
    "prune": "pnpm clean:cache && pnpm clean:builds && echo 'ðŸ§¹ Pruned cache and builds'",
    "prune-all": "pnpm clean:all && echo 'ðŸ§¹ Full prune completed - run pnpm install to restore'"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.5",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=18"
  }
}